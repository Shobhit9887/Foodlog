<%= form_with(model: entry) do |form| %>
  <% if entry.errors.any? %>
    <div style="color: red" class="message is-danger">
    <div class="message-header">
      <p><%= pluralize(entry.errors.count, "error") %> prohibited this entry from being saved:</p>
    </div>
    <div class="message-body">
      <ul>
        <% entry.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
      </div>
    </div>
  <% end %>

  <div>
    <%= form.label :meal_type, class: "label", style: "display: block" %>
    <%= form.text_field :meal_type, class: "input" %>
  </div>

  <div>
    <%= form.label :categories_id, class: "label", style: "display: block" %>
    <div class="select">
      <%= form.select :categories_id, Category.all.collect { |u| [u.title, u.id]} %>
    </div>
  </div>

  <div>
    <%= form.label :calories, class: "label", style: "display: block" %>
    <%= form.number_field :calories, class: "input" %>
  </div>

  <div>
    <%= form.label :protein, class: "label", style: "display: block" %>
    <%= form.number_field :protein, class: "input" %>
  </div>

  <div>
    <%= form.label :carbohydrates, class: "label", style: "display: block" %>
    <%= form.number_field :carbohydrates, class: "input" %>
  </div>

  <div>
    <%= form.label :fats, class: "label", style: "display: block" %>
    <%= form.number_field :fats, class: "input" %>
  </div>

  <div>
    <%= form.submit class: "button is-success mt-4" %>
  </div>
<% end %>
