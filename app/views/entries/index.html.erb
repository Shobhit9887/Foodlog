<% content_for :title do %>
  <h1 class="title">Foodlog &ndash; <%= DateTime.now.to_formatted_s(:nice_date) %></h1>
<% end %>

<div id="entries" class="columns mt-6 is-centered">
  <% @entries.each do |entry| %>
    <%= render entry %>
  <% end %>
</div>

<div class="columns is-centered mt-6">
  <%= link_to 'View all entries', archives_index_path, class: "button is-link is-outlined is-centered" %>
</div>