<div class="columns is-centered mt-6">
    <div class="column is-half">
        <% @entries.each do |day, entries| %>
            <div class="mb-6">
                <h3 class="is-size-4 has-text-weight-bold has-text-centered mb-4">Entries for <%= day %></h3>

            <nav class="level is-mobile">
                <div class="level-item has-text-centered">
                    <div>
                        <p class="heading">Calories</p>
                        <p class="title"><%= entries.pluck(:calories).sum %> cal</p>
                    </div>
                </div>
                <div class="level-item has-text-centered">
                    <div>
                        <p class="heading">Proteins</p>
                        <p class="title"><%= entries.pluck(:protein).sum %>g</p>
                    </div>
                </div>
                <div class="level-item has-text-centered">
                    <div>
                        <p class="heading">Carbohydrates</p>
                        <p class="title"><%= entries.pluck(:carbohydrates).sum %>g</p>
                    </div>
                </div>
                <div class="level-item has-text-centered">
                    <div>
                        <p class="heading">Fats</p>
                        <p class="title"><%= entries.pluck(:fats).sum %>g</p>
                    </div>
                </div>                
            </nav>

            <% entries.each do |entry| %>
                <%= link_to entry_path(entry) do %>
                    <div class="card mb-3">
                        <div class="card-content">
                            <strong><%= entry.meal_type %> for <%= Category.where("id = ?", entry.categories_id).pluck(:title)[0] %></strong><br>
                            <%= entry.calories %> calories,
                            <%= entry.protein %>g proteins,
                            <%= entry.carbohydrates %>g carbohydrates,
                            <%= entry.fats %>g fats
                        </div>
                    </div>
                <% end %>
            <% end %>
            </div>
        <% end %>
    </div>
</div>